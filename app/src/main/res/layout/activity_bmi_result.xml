<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8EEEC"
    tools:context=".bmi_result">

    <!-- ICON ORANG -->
    <ImageView
        android:id="@+id/imgPersonResult"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_circle_orange"
        android:padding="24dp"
        android:src="@drawable/ic_bmi"
        android:contentDescription="@string/cd_icon_person"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- NILAI BMI -->
    <TextView
        android:id="@+id/textViewBmiValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/text_primary"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:text="24,6"
        app:layout_constraintTop_toBottomOf="@id/imgPersonResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- KATEGORI -->
    <TextView
        android:id="@+id/textViewBmiCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/orange_main"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Normal"
        app:layout_constraintTop_toBottomOf="@id/textViewBmiValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CARD PENJELASAN + BUTTON -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="24dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/textViewBmiCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- JUDUL KATEGORI -->
            <TextView
                android:id="@+id/textViewKategoriTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori: Normal"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="16sp" />

            <!-- PENJELASAN BARIS 1 -->
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Normal BMI adalah antara 18.5 dan 24.9."
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <!-- PENJELASAN BARIS 2 -->
            <TextView
                android:id="@+id/textViewDescriptionDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Berat badan Anda termasuk dalam kisaran normal."
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <!-- AsyncTask (Internet) DEMO -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFetchAdvice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="AMBIL SARAN ONLINE"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/orange_main"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textViewAdviceOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <!-- PENJELASAN BARIS 3 -->
            <TextView
                android:id="@+id/textViewDescriptionKeterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="\Kurang dari 18.5 berarti kurus, 18.5–24.9 normal, 25–29.9 overweight, 30–34.9 obesitas I, 35–39.9 obesitas II, dan lebih dari atau sama dengan 40 obesitas III."
                android:textAlignment="gravity"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <!-- SPACER -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- BUTTON HITUNG KEMBALI -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonHitungKembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HITUNG KEMBALI"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/orange_main"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
